<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:weightSum="1">


    <TextView
        android:id="@+id/text_emotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:textSize="20sp"
        android:textColor="#000000"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:ems="10"
        android:text="@string/choose_an_emotion" />

    <Spinner
        android:id="@+id/spinner_emotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="0.08" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="0.08" />

    <TextView
        android:id="@+id/text_feel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:textSize="20sp"
        android:textColor="#000000"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:ems="10"
        android:text="@string/how_strongly_did_you_feel_the_emotion" />

    <SeekBar
        android:id="@+id/seekBar_intensity"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:max="9"
        android:progress="5" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="10">

        <TextView
            android:id="@+id/text_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000000"
            android:ems="10"
            android:text="@string/_1" />

        <TextView
            android:id="@+id/text_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000000"
            android:ems="10"
            android:text="@string/_2" />
        <TextView
            android:id="@+id/text_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000000"
            android:ems="10"
            android:text="@string/_3" />
        <TextView
            android:id="@+id/text_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000000"
            android:ems="10"
            android:text="@string/_4" />
        <TextView
            android:id="@+id/text_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000000"
            android:ems="10"
            android:text="@string/_5" />
        <TextView
            android:id="@+id/text_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000000"
            android:ems="10"
            android:text="@string/_6" />
        <TextView
            android:id="@+id/text_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000000"
            android:ems="10"
            android:text="@string/_7" />
        <TextView
            android:id="@+id/text_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000000"
            android:ems="10"
            android:text="@string/_8" />
        <TextView
            android:id="@+id/text_9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000000"
            android:ems="10"
            android:text="@string/_9" />
        <TextView
            android:id="@+id/text_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000000"
            android:ems="10"
            android:text="@string/_10" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="0.08" />

    <TextView
        android:id="@+id/text_confidence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:textSize="20sp"
        android:textColor="#000000"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:ems="10"
        android:text="@string/how_confident_are_you_about_this_feeling" />

    <SeekBar
        android:id="@+id/seekBar_confidence"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:max="9"
        android:progress="5" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="10">

        <TextView
            android:id="@+id/text_21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000000"
            android:ems="10"
            android:text="@string/_1" />

        <TextView
            android:id="@+id/text_22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000000"
            android:ems="10"
            android:text="@string/_2" />
        <TextView
            android:id="@+id/text_23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000000"
            android:ems="10"
            android:text="@string/_3" />
        <TextView
            android:id="@+id/text_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000000"
            android:ems="10"
            android:text="@string/_4" />
        <TextView
            android:id="@+id/text_25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000000"
            android:ems="10"
            android:text="@string/_5" />
        <TextView
            android:id="@+id/text_26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000000"
            android:ems="10"
            android:text="@string/_6" />
        <TextView
            android:id="@+id/text_27"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000000"
            android:ems="10"
            android:text="@string/_7" />
        <TextView
            android:id="@+id/text_28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000000"
            android:ems="10"
            android:text="@string/_8" />
        <TextView
            android:id="@+id/text_29"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000000"
            android:ems="10"
            android:text="@string/_9" />
        <TextView
            android:id="@+id/text_210"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000000"
            android:ems="10"
            android:text="@string/_10" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="0.08" />

    <TextView
        android:id="@+id/text_emotion2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:textSize="20sp"
        android:textColor="#000000"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:ems="10"
        android:text="@string/please_add_an_emotion" />

    <EditText
        android:id="@+id/text_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
        android:textSize="15sp"
        android:theme="@style/EditTextTheme"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="0.08"
        android:hint="@string/type_here" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="0.08" />

    <TextView
        android:id="@+id/text_date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:textSize="20sp"
        android:textColor="#000000"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="• Please select the date and the time frame to log your emotion" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="9">

        <Button
            android:id="@+id/button_date"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/date" />

        <Button
            android:id="@+id/button_start_time"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/start_time" />

        <Button
            android:id="@+id/button_end_time"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/end_time" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="9">

        <TextView
            android:id="@+id/text_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:textColor="#000000"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_weight="3"
            android:text="@string/not_selected" />

        <TextView
            android:id="@+id/text_start_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:textColor="#000000"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_weight="3"
            android:text="@string/not_selected" />

        <TextView
            android:id="@+id/text_end_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:textColor="#000000"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_weight="3"
            android:text="@string/not_selected" />


    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="0.08" />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:text="@string/submit_data" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:text="@string/cancel" />


</LinearLayout>
</ScrollView>