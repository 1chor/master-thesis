<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16sp"
        android:weightSum="12"
        android:background="#FFF"
        android:orientation="vertical">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/ews_graph"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_weight="3">

        </com.github.mikephil.charting.charts.LineChart>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16sp"
            android:layout_weight="6"
            android:weightSum="10"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="@string/EWS_Score"
                android:textAlignment="center"
                android:textColor="#0288D1"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ews_value"
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="@string/no_value"
                android:textAlignment="center"
                android:textColor="#0288D1"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="16sp"
            android:layout_marginLeft="16sp"
            android:layout_marginBottom="8sp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/spo2_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/oxygen_saturation"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:backgroundTint="#0288D1"
                android:textSize="25sp" />
            <Button
                android:id="@+id/sbp_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/systolic_blood_presure"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:backgroundTint="#0288D1"
                android:textSize="25sp" />
            <Button
                android:id="@+id/temperature_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/temperature"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:backgroundTint="#0288D1"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="16sp"
            android:layout_marginBottom="8sp"
            android:layout_marginRight="16sp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/ews_oxi_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="--"
                android:textAlignment="center"
                android:textColor="#0288D1"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/ews_sbp_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/no_value"
                android:textAlignment="center"
                android:textColor="#0288D1"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/ews_temp_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/no_value"
                android:textAlignment="center"
                android:textColor="#0288D1"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:layout_marginBottom="8sp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/respiratory_rate_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/respiratory_rate"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:backgroundTint="#0288D1"
                android:textSize="25sp" />
            <Button
                android:id="@+id/heart_rate_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/heart_rate"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:backgroundTint="#0288D1"
                android:textSize="25sp" />
            <Button
                android:id="@+id/avpu_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/level_of_consciousness"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:backgroundTint="#0288D1"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="16sp"
            android:layout_marginBottom="8sp"
            android:layout_marginRight="16sp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/ews_rr_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="--"
                android:textAlignment="center"
                android:textColor="#0288D1"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/ews_hr_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="--"
                android:textAlignment="center"
                android:textColor="#0288D1"
                android:textSize="25sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="--"
                android:textAlignment="center"
                android:textColor="#0288D1"
                android:textSize="25sp" />

        </LinearLayout>

        <Button
            android:id="@+id/EWS_historical_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FFF"
            android:layout_marginRight="16sp"
            android:layout_marginLeft="16sp"
            android:layout_marginBottom="16sp"
            android:backgroundTint="#0288D1"
            android:text="@string/historical"
            android:textSize="20sp"/>

    </LinearLayout>

</ScrollView>

